<% provide(:title, 'Перечень услуг') %>
<div class="hero-unit center">
<table>
  <%= content_tag(:h3, "Меры социальной поддержки", class: "center_h3" ) %>
  <% @service.each do |elem| %>
      <td><%= link_to  elem.title.html_safe,  service_path(elem), class: "href" %></td>
      <% if sign_in_admin? || sign_in_editor? %>
      <td><%= link_to 'Редактировать', edit_service_path(elem) %></td>
      <td><%= link_to 'Удалить', service_path(elem),
          method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      <% end %>
      <tr></tr>
  <% end %>
<% if sign_in_admin? || sign_in_editor? %>
   <%= link_to 'Новая статья', new_service_path %>
<% end %>
</table>
</div>