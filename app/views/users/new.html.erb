<% provide(:title, 'Регистрация') %>
<div class="hero-unit center">
<h1>Регистрация</h1>
<%= render 'layouts/validates_users_errors' %>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

      <%= f.label :"Имя" %>
      <%= f.text_field :name %>

      <%= f.label :"Электронная почта" %>
      <%= f.text_field :email %>

      <%= f.label :"Пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Повторите пароль" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Создать учетную запись", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
</div>